void remove_item(int item_index) {
    int input_quantity;
    Item *item = items[item_index];
    std::cout << "\nEnter number of items to sell: ";
    std::cin >> input_quantity;

    int quantity = item->get_quantity();
    if (input_quantity <= quantity) {
        float price = item->get_price();
        float money_earned = price * input_quantity;
        item->set_quantity(quantity - input_quantity);
        std::cout << "\nItems sold";
        std::cout << "\nMoney received: " << money_earned;
        total_money += money_earned;

        // Check if the quantity has reached zero
        if (item->get_quantity() == 0) {
            // Remove the item by shifting the array
            delete items[item_index];  // Free the memory
            for (int i = item_index; i < item_count - 1; i++) {
                items[i] = items[i + 1];
            }
            items[item_count - 1] = nullptr;  // Nullify the last slot
            item_count--;  // Decrease the item count
            std::cout << "\nItem removed from inventory (quantity reached zero).";
        }

    } else {
        std::cout << "\nCannot sell more items than you have.";
    }
}
